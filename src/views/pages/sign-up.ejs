    function getCookie(name) {
      const v = document.cookie.match("(^|;) ?" + name + "=([^;]*)(;|$)");
      return v ? v[2] : null;
    }

    const postIdTokenToSessionLogin = function (url, idToken, csrfToken) {
      return fetch(url, {
        type: "POST",
        data: { idToken: idToken, csrfToken: csrfToken },
      });
    };

